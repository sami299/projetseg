<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="i.taskmanager">

    <application
        android:hardwareAccelerated="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ListeTacheActivity" />
        <activity android:name=".AfficheProfileActivity" />
        <activity android:name=".AfficheTacheActivity"/>
        <activity android:name=".AjouteTacheActivity"/>
        <activity android:name=".AjoutUserActivity"/>
        <activity android:name=".AfficheUsersActivity"/>
        <activity android:name=".EasterEgg"/>
    </application>

</manifest>