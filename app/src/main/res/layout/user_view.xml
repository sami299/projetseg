<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#f2f2f2">

    <ImageView
        android:id="@+id/user_view_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:src="@drawable/monsieur"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/user_view_nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Linda Lamarche"
            android:paddingLeft="10dp"
            android:textColor="@color/colorRedPink"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/user_view_nbPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="120 points"
            android:paddingLeft="10dp"
            android:textColor="@color/colorAccent"
            android:textSize="15dp"/>
    </LinearLayout>

</LinearLayout>