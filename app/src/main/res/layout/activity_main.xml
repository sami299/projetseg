<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="i.taskmanager.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/layout_nuages">

        <View

            android:id="@+id/image_nuages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            ></View>

    </RelativeLayout>


    <LinearLayout
        android:padding="10dp"
        android:background="@drawable/bck_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="30dp"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/logo"
            />

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textAlignment="center"
         android:text="Username"
         android:textColor="@color/colorAccent"
         android:textStyle="bold"
         android:textSize="20dp"/>

        <EditText
            android:id="@+id/menu_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="example@uottawa.ca"
            android:padding="10dp"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Password"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <EditText
            android:inputType="textPassword"
            android:id="@+id/menu_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#84d214"
            android:layout_margin="10dp"
            android:text="CONNEXION"
            android:textColor="#FFFFFF"
            android:fontFamily="Arial"
            android:textStyle="bold"
            android:onClick="LogIn"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorRedPink"
            android:layout_margin="10dp"
            android:text="AJOUTER UN UTILISATEUR"
            android:textColor="#FFFFFF"
            android:fontFamily="Arial"
            android:textStyle="bold"
            android:onClick="ajoutUserActivity"
            />


    </LinearLayout>

</RelativeLayout>
