<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorGreen"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/confirm"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:onClick="mainActivity"
            android:src="@drawable/crochet" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ajout_user_imageRole"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:src="@drawable/king"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Role"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"/>
            <Spinner
                android:id="@+id/ajout_user_role"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#FFFFFF"
                ></Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Information"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#FFFFFF"
        android:columnCount="2"
        android:rowCount="6">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:paddingLeft="5dp"
            android:text="Prénom:"
            android:textColor="@color/colorRedPink"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ajout_user_prenom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:background="@android:color/transparent"
            android:hint="Entrez le prénom"
            android:textSize="15dp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:paddingLeft="5dp"
            android:text="Nom : "
            android:textColor="@color/colorRedPink"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ajout_user_nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:background="@android:color/transparent"
            android:hint="Entrez le nom"
            android:textSize="15dp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:paddingLeft="5dp"
            android:text="User :"
            android:textColor="@color/colorRedPink"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ajout_user_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:background="@android:color/transparent"
            android:hint="Entrez le username"
            android:textSize="15dp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:paddingLeft="5dp"
            android:text="Pass :"
            android:textColor="@color/colorRedPink"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ajout_user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:background="@android:color/transparent"
            android:hint="Entrez le password (0-9)"
            android:textSize="15dp" />

    </GridLayout>

    <Button
        android:id="@+id/ajout_user_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="addUser"
        android:text="Ajouter l'utilisateur"
        android:layout_margin="20dp"/>

</LinearLayout>